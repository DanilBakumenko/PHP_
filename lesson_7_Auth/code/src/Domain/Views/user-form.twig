<form action="{% block action%}/user/save/{% endblock %}" method="post">
  <input id="csrf_token" type="hidden" name="csrf_token" value="{{ csrf_token }}">
  {% block id %} {% endblock %}
  <p>
    <label for="user-name">Имя: {% block name %}{% endblock %}</label>
    <input id="user-name" type="text" name="name">
  </p>
  <p>
    <label for="user-lastname">Фамилия:{% block lastname %}{% endblock %}</label>
    <input id="user-lastname" type="text" name="lastname">
  </p>
  <p>
    <label for="user-birthday">День рождения:{% block birthday %}{% endblock %}</label>
    <input id="user-birthday" type="text" name="birthday" placeholder="ДД-ММ-ГГГГ">
  </p>
  <p><input type="submit" value="Сохранить"></p>
</form>

